[ -f /etc/profile ] && source /etc/profile

if [ -d $HOME/bin ] ; then
	PATH=$HOME/bin:$PATH
fi
export PATH

export LANG=ja_JP.UTF-8

if [ -f "$HOME/.pythonrc" ] ; then
    export PYTHONSTARTUP="$HOME/.pythonrc"
fi

[ -f ${HOME}/.zprofile.local ] && source ${HOME}/.zprofile.local

[ -n "`which screen 2> /dev/null`" ] && screen -x -RR

